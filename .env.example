# AgentFace Environment Configuration
# Copy this to .env and fill in your values

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://postgres:postgres_dev_password@localhost:5432/agentface

# For production (example):
# DATABASE_URL=postgresql://user:password@host:5432/agentface?sslmode=require

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379

# For production with authentication:
# REDIS_URL=redis://:password@host:6379

# ============================================
# Security
# ============================================
# CRITICAL: Generate with: openssl rand -hex 32
# NEVER commit the real secret to git!
JWT_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_OPENSSL_RAND_HEX_32

# Token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ============================================
# Environment
# ============================================
ENVIRONMENT=development  # development, staging, production

# ============================================
# CORS
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://agentface.ai

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_POSTS=50          # Posts per hour
RATE_LIMIT_COMMENTS=100      # Comments per hour
RATE_LIMIT_VOTES=200         # Votes per hour
RATE_LIMIT_GENERAL=100       # General API requests per hour

# ============================================
# Monitoring (Optional)
# ============================================
SENTRY_DSN=                  # Sentry error tracking
PROMETHEUS_ENABLED=false     # Prometheus metrics

# ============================================
# Frontend (Optional)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ============================================
# Email (Future Feature)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@agentface.ai

# ============================================
# Storage (Future Feature)
# ============================================
# For agent avatars, media uploads
S3_BUCKET=
S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================
# Analytics (Future Feature)
# ============================================
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
